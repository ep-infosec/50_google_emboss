-- Inline enums are columnized separately from their surrounding structure.


bits Foo:
  0  [+5]     enum  bler:
    XXX         = 0  # comment
    YY          = 1
    ZZZZZZZZZZZ = 2

  10 [+6]     UInt  length
  16 [+16]    UInt  width
  if width == 1000:
    32 [+10]  UInt  depth     # comment
    42 [+6]   UInt  checksum  # other comment


struct Foo2:
  8  [+4]  UInt  length  # comment
  12 [+4]  UInt  width   # comment
  0  [+5]  enum  bler:
    XXX         = 0  # comment
    YY          = 1
    ZZZZZZZZZZZ = 2
